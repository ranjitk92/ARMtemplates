{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "SQLname": {
        "type": "string",
        "defaultValue":"defaultservername"
      },
      "DBname": {
        "type": "string",
        "defaultValue":"defaultDBname"
      },
      "blobstoragecontainer": {
          "type": "string",
          "defaultValue": "defaultblobstoragename"
      },
      "storageaccount": {
          "type": "string",
          "defaultValue": "clientliststorageaccount"
      },
      "Location": {
          "type": "string",
          "defaultValue":"East US"
      },
      "resourceTags": {
          "type": "object",
          "defaultValue": {
              "client":"[parameters('clienttag')]"
          }
      },
      "clienttag":{
          "type": "string",
          "defaultValue":"defaulttag"
      }
    },
    "resources": [
        {
        "name": "[parameters('SQLname')]",
        "type": "Microsoft.Sql/servers",
        "apiVersion": "2019-06-01-preview",
        "location": "[parameters('Location')]",
        "tags": "[parameters('resourceTags')]",
        "identity": {
          "type": "SystemAssigned"
                    },
        "properties": {
          "administratorLogin": "ranjit1",
          "administratorLoginPassword": "testSQL123abc!@#",
          "version": "12.0",
          "minimalTlsVersion": "1.0",
          "publicNetworkAccess": "Enabled"
                      }
        },
        {
          "type": "Microsoft.Sql/servers/databases",
          "apiVersion": "2019-06-01-preview",
          "name": "[concat(parameters('DBname'),'/SQLdb')]",
          "tags": "[parameters('resourceTags')]",
          "sku": {
            "name": "S0",
            "tier": "Standard"
                },
          "location": "[parameters('Location')]",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers', concat(parameters('SQLname')))]"
                        ]   
        },
        {
           "type": "Microsoft.Storage/storageAccounts",
           "apiVersion": "2019-06-01",
           "name": "[parameters('storageaccount')]",
           "location": "[parameters('Location')]",
           "sku":{
               "name": "Standard_LRS",
               "tier": "Standard"
                },
            "kind": "StorageV2",
            "properties": {
                "accessTier": "Hot"
                            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2019-06-01",
            "name": "[concat(parameters('blobstoragecontainer'),'/storage/container')]",
            "tags": "[parameters('resourceTags')]", 
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', concat(parameters('storageaccount')))]"
            ]
        }
    ]
}